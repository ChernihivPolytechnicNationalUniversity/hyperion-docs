}

entity Course {
  * id : UUID <<PK>>
  --
  * title : String
  * description : Text <<nullable>>
  instructor_id : UUID <<FK>>
  created_at : DateTime
  updated_at : DateTime
}

entity Enrollment {
  * id : UUID <<PK>>
  --
  * user_id : UUID <<FK>>
  * course_id : UUID <<FK>>
  enrolled_at : DateTime
  status : String
}

